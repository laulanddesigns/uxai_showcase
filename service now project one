  <script>
    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Process step interaction
    const processSteps = [
      { title: "Map workflow", body: "Documented current intake, handoffs, and follow-up loops to pinpoint where users lost time or confidence." },
      { title: "Find friction", body: "Identified repetitive actions, unclear status moments, and edge cases that increased cognitive load and follow-up volume." },
      { title: "Simplify", body: "Reduced steps, clarified responsibilities, and standardized the information needed to move work forward." },
      { title: "Automate selectively", body: "Automated routine actions (routing, status updates, reminders) while preserving human oversight where judgment matters." },
      { title: "Validate usability", body: "Checked that the workflow was predictable, learnable, and trustworthy for non-technical internal users." }
    ];

    const processTitle = document.getElementById('processTitle');
    const processBody  = document.getElementById('processBody');

    document.querySelectorAll('.stepBtn').forEach(btn => {
      btn.addEventListener('click', () => {
        const idx = Number(btn.dataset.step);
        processTitle.textContent = processSteps[idx].title;
        processBody.textContent  = processSteps[idx].body;

        document.querySelectorAll('.stepBtn').forEach(b => b.classList.remove('border-pink-400/60'));
        btn.classList.add('border-pink-400/60');
      });
    });

    // Demo interaction
    const demoPanel = document.getElementById('demoPanel');

    const demos = {
      standard: {
        title: "Standard Request Flow",
        bullets: [
          "Auto-categorized from intake fields",
          "Routed to the right queue/team",
          "Standard SLA applied automatically",
          "Confirmation sent to requester",
          "Timed reminders if unresolved",
          "Human touchpoint: assignment review"
        ]
      },
      urgent: {
        title: "Urgent Request Flow",
        bullets: [
          "Priority detected and flagged",
          "Escalation routing to available owner",
          "Expedited SLA applied automatically",
          "Immediate notifications to owner + backup",
          "Auto-escalation if stalled",
          "Human touchpoint: manager visibility"
        ]
      },
      complex: {
        title: "Complex Request Flow",
        bullets: [
          "Complexity detected by scope",
          "Broken into subtasks with dependencies",
          "Multi-team routing where needed",
          "Stakeholder update cadence initiated",
          "Progress summaries generated",
          "Human touchpoint: kickoff coordination"
        ]
      }
    };

    function renderDemo(type){
      const d = demos[type];
      const list = d.bullets.map(x => `<li class="text-sm opacity-90">• ${x}</li>`).join("");
      demoPanel.innerHTML = `
        <h3 class="text-lg font-semibold mb-2">${d.title}</h3>
        <ul class="space-y-2">${list}</ul>
      `;
    }

    document.querySelectorAll('.demoBtn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.demoBtn').forEach(b => b.classList.remove('border-pink-400/60'));
        btn.classList.add('border-pink-400/60');
        renderDemo(btn.dataset.type);
      });
    });
  </script>
